{
  "kind": "collectionType",
  "collectionName": "games",
  "info": {
    "singularName": "game",
    "pluralName": "games",
    "displayName": "Game"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "minLength": 10,
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "discountPercentage": {
      "type": "decimal"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "developer": {
      "type": "string",
      "required": false
    },
    "releaseDate": {
      "type": "date",
      "required": true
    },
    "platform": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "PS5",
        "PS4",
        "PC",
        "Xbox",
        "Nintendo"
      ]
    },
    "stock": {
      "type": "integer",
      "required": true
    },
    "rating": {
      "type": "decimal",
      "required": true
    },
    "videoTrailer": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "genres": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::genre.genre",
      "inversedBy": "games"
    }
  }
}
